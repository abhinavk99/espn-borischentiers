{
    "manifest_version": 2,
    "name": "ESPN Boris Chen Tiers",
    "version": "1.0",
    "description": "Integrates Boris Chen tiers into ESPN Fantasy Football team pages",
    "content_scripts": [
        {
            "matches": [
                "*://games.espn.com/ffl/clubhouse?*"
            ],
            "js": [
                "espn-borischentiers.js"
            ]
        }
    ],
    "permissions": [
        "https://s3-us-west-1.amazonaws.com/fftiers/out/*"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        }
    }
}